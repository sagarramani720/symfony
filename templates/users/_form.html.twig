{{ form_start(form) }}
    <div class="form-group">
        <div class="form_field">{{ form_row(form.name, {'attr': {'class': 'form-control', 'autocomplete':'off','maxlength':'100'}}) }}</div>
    </div>
    <div class="form-group">
        <div class="form_field">{{ form_row(form.email, {'attr': {'class': 'form-control', 'autocomplete':'off','maxlength':'100'}}) }}</div>
    </div>
    <div class="form-group">
        <div class="form_field">{{ form_row(form.phone, {'attr': {'class': 'form-control', 'autocomplete':'off','maxlength':'10'}}) }}</div>
    </div>
    <div class="form-group">
        <div class="form_field">{{ form_row(form.city, {'attr': {'class': 'form-control', 'autocomplete':'off','maxlength':'100'}}) }}</div>
    </div>
    <button class="btn {{ button_color|default('btn-outline-primary') }}  mt-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}